<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navmenu.detection.MainDetectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg3">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/captureFrameButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/rounded_button"
                    android:text="Capture Video"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/openCameraButton"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/openCameraButton"
                    app:layout_constraintTop_toBottomOf="@+id/openCameraButton"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/detectImgButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_button"
                    android:text="Detect Image"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/imgToBeDetected"
                    app:layout_constraintStart_toStartOf="@+id/imgToBeDetected"
                    app:layout_constraintTop_toBottomOf="@+id/removeImgButton" />

                <Button
                    android:id="@+id/openGalleryButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/rounded_button"
                    android:text="Open Gallery"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/imgToBeDetected"
                    app:layout_constraintStart_toStartOf="@+id/imgToBeDetected"
                    app:layout_constraintTop_toBottomOf="@+id/imgToBeDetected" />

                <Button
                    android:id="@+id/openCameraButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"
                    android:text="Open Camera"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/openGalleryButton"
                    app:layout_constraintStart_toStartOf="@+id/openGalleryButton"
                    app:layout_constraintTop_toBottomOf="@+id/openGalleryButton" />

                <ImageView
                    android:id="@+id/imgToBeDetected"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="90dp"
                    android:src="@drawable/upload_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/removeImgButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="-14dp"
                    android:layout_marginTop="-15dp"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_delete"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@+id/imgToBeDetected"
                    app:layout_constraintTop_toBottomOf="@+id/imgToBeDetected" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

